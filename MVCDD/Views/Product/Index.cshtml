@model IEnumerable<MVCDD.Models.MVCProductModel>

@{

    ViewBag.Title = "All Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<p>
    <a href="@Url.Action("AddOrEdit","Product")" class="btn btn-default"><i class="fa fa-plus"></i> Add New Product</a>
</p>
<table class="table" table table-striped>
    <thead class="table-heading">
        <tr>
            <th>
             Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
               Price
            </th>
            <th>Actions</th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.productName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <a href="@Url.Action("AddOrEdit","Product",new { id = item.ProductID })" class="btn btn-default edit">Edit</a>
            <a onclick="Delete(@item.ProductID)" class="btn btn-default delete">Delete</a>
        </td>
    </tr>
}

</table>

@section scripts
{
<script>
    $(function () {
        var successMessage = '@TempData["SuccessMessage"]'
        if (successMessage != '')
            alertify.success(successMessage);

    });

    function Delete(id)
    {
        alertify.confirm('Delete Product', 'Are you sure you want to delete this product ?', function () {
            window.location.href = '@Url.Action("Delete","Product")/' + id;
        }, null);
     
    }
    </script>

    }